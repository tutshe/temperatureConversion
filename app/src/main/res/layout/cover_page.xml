<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoverPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:text="Temperature Convertor" />

        <ImageView
            android:id="@+id/ivThermometer"
            android:layout_marginTop="30sp"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:src="@drawable/thermo" />

        <ImageView
            android:id="@+id/ivScales"
            android:layout_marginTop="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/scales" />

        <LinearLayout
            android:layout_marginTop="30sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bStart"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#434F9E"
                android:textSize="20sp"
                android:layout_weight="1"
                android:text="Start" />

            <Button
                android:id="@+id/ibLearn"
                android:textSize="20sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#48494B"
                android:text="Learn" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>